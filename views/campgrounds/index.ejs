<% layout('layouts/boilerplate') %>

    <div>
        <!-- <a href="/campgrounds/new">Add Campground</a> -->
    </div>
    <div class="container mt-4 mb-4">
        <h1>All Campgrounds</h1>


        <div id='map' style='width: 400px; height: 300px;'></div>
        <script>
            mapboxgl.accessToken = 'pk.eyJ1Ijoib2d1enl1cmVrIiwiYSI6ImNsYnU0NWkxMDA0Z2czcXBoNXhrNDN1dWQifQ.iohKSeWq77CUZuWKQSHvXA';
            const map = new mapboxgl.Map({
                container: 'map', // container ID
                style: 'mapbox://styles/mapbox/streets-v12', // style URL
                center: [-74.5, 40], // starting position [lng, lat]
                zoom: 9, // starting zoom
            });
        </script>


        <% for (let campground of campgrounds){%>

            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=campground.images[0].url%>">

                    </div>
                    <div class="col-md-8">


                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="card-text text-muted">
                                <%= campground.location %>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn bg-primary">
                                <%= campground.title %>
                            </a>
                        </div>
                    </div>

                </div>
            </div>



            <% }%>

    </div>