<% layout('layouts/boilerplate') %>
    <div class="container mt-4 mb-4">
        <div class="modal-body row">
            <div class="col-md-6 ">
                <img src="<%= campground.image %>" class="rounded-4 img-fluid" alt="..." alt="">
            </div>

            <div class="col-md-6">
                <h1>
                    <%= campground.title %>
                </h1>
                <h2>
                    <%= campground.location %>
                </h2>
                <h3 class="text-muted">
                    $<%= campground.price %>
                </h3>
                <p>
                    <%= campground.description%>
                </p>
                <p> <a class="btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                </p>
                <p>
                <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                </p>

                <div class="mt-5 mb-3">
                    <h2>Reviews</h2>




                    <form action="/campgrounds/<%=campground._id%>/reviews" method="POST">
                        <div class="mb-3">
                            <label class="form-label" for="rating">Rating</label>
                            <input class="form-range" type="range" min="0" max="5" name="review[rating]" id="rating">
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="body">Review</label>
                            <textarea class="form-control" name="review[body]" id="body" cols="10" rows="3"
                                required></textarea>
                        </div>


                        <button class="btn btn-success">Submit</button>
                    </form>


                    <div>
                        <% for (let review of campground.reviews){ %>
                            <div class="mb-3 mt-3">
                                <p>
                                    <%= review.rating %>
                                    <%= review.body %>
                                </p>
                            </div>

                            <% } %>
                    </div>
                </div>
            </div>


        </div>
    </div>