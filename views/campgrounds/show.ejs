<% layout('layouts/boilerplate') %>
    <div class="container mt-4 mb-4">
        <div class="modal-body row">
            <div class="col-md-6 ">
                <img src="<%= campground.image %>" class="rounded-4 img-fluid" alt="..." alt="">
                <p class=" d-flex p-2 ">
                    Added by <%= campground.author.username %>
                </p>
            </div>

            <div class="col-md-6 ">

                <h1>
                    <%= campground.title %>
                </h1>
                <h2>
                    <%= campground.location %>
                </h2>
                <h3 class="text-muted">
                    $<%= campground.price %>
                </h3>
                <p>
                    <%= campground.description%>
                </p>


                <% if( currentUser && campground.author.equals(currentUser._id) ){ %>
                    <p> <a class="btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    </p>
                    <p>
                    <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>

                        </p>

                        <div class="mt-5 mb-3">



                            <% if( currentUser ){ %>

                                <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" novalidate
                                    class="needs-validation">
                                    <div class="mb-3">
                                        <label class="form-label" for="rating">Rating</label>
                                        <input class="form-range" type="range" min="0" max="5" name="review[rating]"
                                            id="rating">
                                    </div>

                                    <div class="mb-3">

                                        <label class="form-label" for="body">Review</label>
                                        <p>


                                        </p>
                                        <textarea class="form-control" name="review[body]" id="body" cols="10" rows="3"
                                            required></textarea>
                                    </div>


                                    <button class="btn btn-success">Submit</button>
                                </form>
                                <% } %>



                                    <div>

                                        <% for (let review of campground.reviews){ %>

                                            <div class="card mb-2 mt-2">
                                                <div class="card-body">

                                                    <h5 class="card-title"> Rating: <%= review.rating %>
                                                    </h5>
                                                    <p>
                                                        <%= review.body %>
                                                    </p>
                                                    <p>

                                                    </p>
                                                    <form
                                                        action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
                                                        method="POST">


                                                        <% if(currentUser && campground.author.equals(currentUser._id)
                                                            || review.author.equals(currentUser._id) ) {%>
                                                            <button class="btn btn-sm btn-danger">Delete</button>
                                                            <% } %>


                                                    </form>
                                                </div>

                                            </div>

                                            <% } %>
                                    </div>
                        </div>
            </div>


        </div>
    </div>