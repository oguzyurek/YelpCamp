<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheet/reviewStars.css">
    <div class="container mt-4 mb-4">
        <div class="modal-body row">
            <div class="col-md-6 ">
                <!--  -->


                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <% for (let img of campground.images) {%>
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="<%= img.url %>" alt="First slide">
                            </div>
                            <% } %>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>




                <p class=" d-flex p-2 ">
                    Added by <%= campground.author.username %>
                </p>
            </div>

            <div class="col-md-6 ">

                <h1>
                    <%= campground.title %>
                </h1>
                <h2>
                    <%= campground.location %>
                </h2>
                <h3 class="text-muted">
                    $<%= campground.price %>
                </h3>
                <p>
                    <%= campground.description%>
                </p>


                <% if( currentUser && campground.author.equals(currentUser._id) ){ %>
                    <p> <a class="btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    </p>
                    <p>
                    <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>

                        </p>

                        <div class="mt-5 mb-3">



                            <% if( currentUser ){ %>

                                <form action="/campgrounds/<%=campground._id%>/reviews" method="POST"
                                    class="needs-validation">
                                    <div class="mb-3">

                                        <h2>Make a Review!</h2>
                                        <fieldset class="starability-basic">
                                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                                value="1" checked aria-label="No rating." />
                                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                            <label for="first-rate1" title="Terrible">1 star</label>
                                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                            <label for="first-rate2" title="Not good">2 stars</label>
                                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                            <label for="first-rate3" title="Average">3 stars</label>
                                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                            <label for="first-rate4" title="Very good">4 stars</label>
                                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                            <label for="first-rate5" title="Amazing">5 stars</label>
                                        </fieldset>
                                        <label class="form-label" for="body"></label>
                                        <textarea class="form-control" name="review[body]" id="body" cols="10" rows="3"
                                            required></textarea>
                                    </div>


                                    <button class="btn btn-success">Submit</button>
                                </form>
                                <% } %>



                                    <div class="mt-5">

                                        <% for (let review of campground.reviews){ %>

                                            <div class="card mb-2 mt-2">

                                                <div class="card-body">

                                                    <p class="starability-result" data-rating="<%=review.rating%>">
                                                    </p>
                                                    <p>
                                                        <%= review.body %>
                                                    </p>
                                                    <p class="text-muted">
                                                        <%= review.author.username %>
                                                    </p>

                                                    <form
                                                        action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
                                                        method="POST">

                                                        <% if( currentUser && review.author.equals(currentUser._id)){ %>

                                                            <button class="btn btn-sm btn-danger">Delete</button>

                                                            <% } %>

                                                    </form>
                                                </div>

                                            </div>

                                            <% } %>
                                    </div>
                        </div>
            </div>


        </div>
    </div>